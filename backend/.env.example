# Backend Environment Variables
# Copy this file to .env and fill in the values

# Server port
PORT=3000

# Environment mode (development or production)
NODE_ENV=development

# PostgreSQL database connection
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://atm_user:atm_password@localhost:5432/atm_db

# CORS - Frontend URL(s)
# For dev mode: http://localhost:5173
# For production with ngrok: you can specify multiple URLs separated by comma
# Example: http://localhost:5173,https://your-ngrok-url.ngrok-free.app
FRONTEND_URL=http://localhost:5173

# JWT secrets for tokens
# IMPORTANT: Use strong random strings in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production

# Seed users (prisma db seed)
# Format: SEED_{ROLE}_EMAIL, SEED_{ROLE}_PASSWORD, SEED_{ROLE}_FIRST_NAME, SEED_{ROLE}_LAST_NAME
SEED_ADMIN_EMAIL=admin@atm.local
SEED_ADMIN_PASSWORD=change-me
SEED_ADMIN_FIRST_NAME=Admin
SEED_ADMIN_LAST_NAME=ATM

SEED_MANAGER_EMAIL=manager@atm.local
SEED_MANAGER_PASSWORD=change-me
SEED_MANAGER_FIRST_NAME=Manager
SEED_MANAGER_LAST_NAME=ATM

SEED_WORKER_EMAIL=worker@atm.local
SEED_WORKER_PASSWORD=change-me
SEED_WORKER_FIRST_NAME=Worker
SEED_WORKER_LAST_NAME=ATM